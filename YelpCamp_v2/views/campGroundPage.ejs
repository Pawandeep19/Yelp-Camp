<div class="container">
    <div class="jumbotron">
        <div class="container">
        <h1>Campgrounds page</h1>
        <p>View all here...</p>
        <a class="btn btn-lg btn-primary" href="/campground/new">Add new Campground</a>
        </div>        
    </div>
    <div class="row">        
            <% for(var i=0;i<campgrounds.length;i++) { %>
